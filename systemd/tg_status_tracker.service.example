[Unit]
Description=Telegram User Status Tracker
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/path/to/telegram-status-tracker
ExecStart=/path/to/venv/bin/python /path/to/telegram-status-tracker/telegram-status-tracker.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
